# =============================================================================
# Facade Tests
# =============================================================================
# These tests verify that pw_sync_particle backends behave correctly.
# They use the Pigweed facade test sources and run on-device.
#
# The particle backends use C++ headers that are not C-compatible, so we
# provide C++ implementations of the C API test wrappers (facade_test_stubs.cc)
# instead of using the original C test files.
#
# Build: bazel build --config=p2 //pw_sync_particle:binary_semaphore_facade_test
# Flash: bazel run --config=p2 //pw_sync_particle:binary_semaphore_facade_test_flash

particle_cc_test(
    name = "binary_semaphore_facade_test",
    srcs = [
